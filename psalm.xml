<?xml version="1.0"?>
<psalm
    totallyTyped="false"
    allowPhpStormGenerics="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config file://./vendor-bin/psalm/vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="src/" />

        <ignoreFiles>
            <directory name="vendor" />
            <file name="src/Kernel.php" />
        </ignoreFiles>
    </projectFiles>

    <issueHandlers>
        <LessSpecificReturnType errorLevel="suppress" />
        <MissingReturnType errorLevel="suppress" />
        <InvalidDocblock errorLevel="suppress" />
        <PropertyNotSetInConstructor errorLevel="suppress" />
        <MissingClosureParamType errorLevel="suppress" />
        <MissingParamType errorLevel="suppress" />
        <InvalidStringClass errorLevel="suppress" />
        <!-- Remove these after all deprecations are fixed -->
        <DeprecatedClass errorLevel="suppress" />
        <DeprecatedInterface errorLevel="suppress" />
        <InternalMethod errorLevel="suppress" />
        <!-- Remove these after all deprecations are fixed -->
    </issueHandlers>
</psalm>
